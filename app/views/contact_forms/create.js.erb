function refreshForm(innerHTML) {
  const contactForms = document.querySelectorAll('.new-contact-form');
  contactForms.forEach((form) => {
    form.innerHTML = innerHTML;
  });
}

<% if @contact_form.errors.any? %>
  refreshForm('<%= j render "contact_forms/new" %>');
<% else %>
  refreshForm('<%= j render "contact_forms/success" %>');
<% end %>
