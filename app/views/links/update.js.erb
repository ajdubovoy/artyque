function refreshForm(innerHTML) {
  const form = document.getElementById('edit-form');
  form.innerHTML = innerHTML;
}

<% if @link.errors.any? %>
  refreshForm('<%= j render "artists/edit_links", artist: @artist, link: Link.new %>');
<% else %>
  refreshForm('<%= j render "new", artist: @artist, link: @link %>');
<% end %>
window.init();
