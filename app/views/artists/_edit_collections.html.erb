<%= simple_form_for artist, remote: true do |f| %>
  <h2>Collections</h2>
  <div class="p-3">
    <ul class="list-group">
      <% @artist.collections.each do |collection| %>
        <%= link_to '' do %>
          <li class="list-group-item list-group-item-action"><%= collection.name %></li>  
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>
