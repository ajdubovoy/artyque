<%= simple_form_for artist, remote: true do |f| %>
  <h2>Layout Style</h2>
  <div class="p-3">
    <%= f.label :layout %>
    <div class="stim-select mb-2" data-controller="select">
      <div class="stim-select-button p-0" data-select-value="1" data-action="click->select#update" data-target='select.button' role="button" title="1">
        <div class="stim-select-button-text c-dark-blue">1</div>
        <div class="color-strip-full bg-pink"></div>
      </div>
      <div class="stim-select-button p-0" data-select-value="2" data-action="click->select#update" data-target='select.button' role="button" title="2">
        <div class="stim-select-button-text c-dark-blue">2</div>
        <div class="color-strip-full bg-pink"></div>
      </div>
      <div class="stim-select-button p-0" data-select-value="3" data-action="click->select#update" data-target='select.button' role="button" title="3">
        <div class="stim-select-button-text c-dark-blue">3</div>
        <div class="color-strip-full bg-pink"></div>
      </div>
      <%= f.input :layout, collection: [1, 2, 3], as: :hidden, input_html: { 'data-target' => 'select.input' } %>
    </div>
  </div>
  <h2>Banner Content</h2>
  <div class="p-3">
    <%= render 'shared/photo_uploader', f: f, field: :video, show_label: true %>
    <%= f.input :quotation %>
    <%= f.input :quotation_caption %>
  </div>
  <h2>Page Content</h2>
  <h3>About Me</h3>
  <div class="p-3">
    <%= f.input :about_me, label: false %>
  </div>
  <h2>Resume</h2>
  <div id="resume-blocks-fields">
    <%= f.simple_fields_for :resume_blocks do |block| %>
      <%= render 'resume_block_fields', f: block %>
    <% end %>
    <div class="pl-3 pr-3 pb-3">
      <%= link_to_add_association '+ Add block', f, :resume_blocks, class: 'button-tertiary w-100' %>
    </div>
  </div>
  <div class="border-bottom-light-gray mb-3"></div>
  <div class="p-3">
    <%= hidden_field_tag(:stage, 'layout') %>
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
