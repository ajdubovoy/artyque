<%= simple_form_for [artist, collection], remote: true do |f| %>
  <div class="p-3">
    <%= link_to "< Back", edit_collections_artist_path(artist), remote: true, class: 'button-tertiary' %>
  </div>
  <h2>New Collection</h2>
  <div class="p-3">
    <%= f.input :name %>
  </div>
  <div class="border-bottom-light-gray mb-3"></div>
  <div class="p-3">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
